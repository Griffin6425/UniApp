<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="uniapp.controller.AdminDashboardController"
      prefWidth="900" prefHeight="700"
      style="-fx-background-color: #F5F5F5;">

    <!-- Header -->
    <VBox style="-fx-background-color: #2C3E50; -fx-padding: 20;">
        <Label fx:id="welcomeLabel" text="Admin Dashboard" 
               style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
    </VBox>

    <!-- Main Content -->
    <TabPane VBox.vgrow="ALWAYS" style="-fx-padding: 20;">
        
        <!-- Students Tab -->
        <Tab text="Students" closable="false">
            <VBox spacing="15" style="-fx-padding: 20;">
                <Label text="All Students" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                
                <TableView fx:id="studentsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="studentIdColumn" text="Student ID" prefWidth="100"/>
                        <TableColumn fx:id="studentNameColumn" text="Name" prefWidth="200"/>
                        <TableColumn fx:id="studentEmailColumn" text="Email" prefWidth="250"/>
                        <TableColumn fx:id="enrollmentCountColumn" text="Enrolled" prefWidth="100"/>
                    </columns>
                </TableView>
                
                <HBox spacing="15" alignment="CENTER">
                    <Button text="Remove Student" onAction="#handleRemoveStudent"
                            style="-fx-background-color: #DC3545; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 30;"/>
                </HBox>
            </VBox>
        </Tab>

        <!-- Subjects Tab -->
        <Tab text="Subjects" closable="false">
            <VBox spacing="15" style="-fx-padding: 20;">
                <Label text="All Subjects" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                
                <TableView fx:id="subjectsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="subjectIdColumn" text="Subject ID" prefWidth="100"/>
                        <TableColumn fx:id="subjectCodeColumn" text="Code" prefWidth="150"/>
                        <TableColumn fx:id="subjectTitleColumn" text="Title" prefWidth="400"/>
                    </columns>
                </TableView>
                
                <HBox spacing="15" alignment="CENTER">
                    <Button text="Add Subject" onAction="#handleAddSubject"
                            style="-fx-background-color: #28A745; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 30;"/>
                    <Button text="Remove Subject" onAction="#handleRemoveSubject"
                            style="-fx-background-color: #DC3545; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 30;"/>
                </HBox>
            </VBox>
        </Tab>

        <!-- Statistics Tab -->
        <Tab text="Statistics" closable="false">
            <VBox spacing="20" style="-fx-padding: 20;">
                <Label text="Grade Statistics" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                
                <TextArea fx:id="statisticsArea" editable="false" 
                          VBox.vgrow="ALWAYS"
                          style="-fx-font-family: monospace; -fx-font-size: 13px;"/>
                
                <Button text="Refresh Statistics" onAction="#handleRefreshStatistics"
                        style="-fx-background-color: #007BFF; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 30;"/>
            </VBox>
        </Tab>
    </TabPane>

    <!-- Bottom Section -->
    <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: white;">
        <Button text="Logout" onAction="#handleLogout"
                style="-fx-background-color: #6C757D; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 30;"/>
    </HBox>
</VBox>