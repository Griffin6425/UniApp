<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="uniapp.controller.StudentDashboardController"
            style="-fx-background-color: #f5f5f5;">

    <!-- Top Section: Welcome & Student Info -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #2196F3; -fx-padding: 20;">
            <Label fx:id="welcomeLabel" text="Welcome, Student!" 
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <HBox spacing="20">
                <Label fx:id="studentIdLabel" text="Student ID: 000000" 
                       style="-fx-font-size: 14px; -fx-text-fill: white;"/>
                <Label fx:id="emailLabel" text="Email: student@university.com" 
                       style="-fx-font-size: 14px; -fx-text-fill: white;"/>
            </HBox>
            <Label fx:id="enrollmentCountLabel" text="Enrolled Subjects: 0 / 4" 
                   style="-fx-font-size: 14px; -fx-text-fill: white;"/>
        </VBox>
    </top>

    <!-- Center Section: Enrolled Subjects Table -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <Label text="My Enrolled Subjects" 
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            
            <TableView fx:id="enrollmentsTable" style="-fx-background-color: white;">
                <columns>
                    <TableColumn fx:id="subjectCodeColumn" text="Subject Code" prefWidth="150"/>
                    <TableColumn fx:id="subjectTitleColumn" text="Subject Title" prefWidth="300"/>
                    <TableColumn fx:id="markColumn" text="Mark" prefWidth="100"/>
                    <TableColumn fx:id="gradeColumn" text="Grade" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Bottom Section: Action Buttons -->
    <bottom>
        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: white;">
            <Button fx:id="enrollButton" text="Enroll in Subject" onAction="#handleEnrollSubject"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 30;"/>
            <Button fx:id="removeButton" text="Remove Subject" onAction="#handleRemoveSubject"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 30;"/>
            <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 30;"/>
            <Button text="Change Password" onAction="#handleChangePassword" styleClass="btn-secondary" />
        </HBox>
    </bottom>

</BorderPane>